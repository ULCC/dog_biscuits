# Generated via
#  `rails generate hyrax:work <%= class_name %>`
# Updated by
#  `rails generate dog_biscuits:work <%= class_name %>`
module Hyrax
  class <%= class_name %>Presenter < Hyrax::WorkShowPresenter
    class << self
      def delegated_properties
        props = DogBiscuits.config.<%=file_name%>_properties
        controlled = <%=class_name.constantize%>.controlled_properties
        props.reject { |p| controlled.include? p }.concat(
          props.select { |p| controlled.include? p }.collect { |c| "#{c}_label".to_sym }
        )
      end
    end

    delegate(*delegated_properties, to: :solr_document)
  end
end
